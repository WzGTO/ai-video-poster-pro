# ===========================================
# AI Video Poster Pro - Environment Variables
# ===========================================
# คัดลอกไฟล์นี้เป็น .env.local และใส่ค่าจริง

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# NextAuth.js
# ===========================================
# สร้าง secret: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# Google OAuth & APIs
# ===========================================
# สร้างที่ https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google Cloud TTS (Optional - ถ้าใช้ Google TTS)
GOOGLE_CLOUD_TTS_KEY=

# ===========================================
# Supabase
# ===========================================
# ดูได้ที่ https://supabase.com/dashboard/project/[project]/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ===========================================
# TikTok Shop API
# ===========================================
# สมัครที่ https://partner.tiktokshop.com/
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# ===========================================
# Facebook API
# ===========================================
# สร้างที่ https://developers.facebook.com/apps/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ===========================================
# AI Models - Text Generation
# ===========================================
# Google AI Studio / Gemini
# สร้างที่ https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GOOGLE_AI_STUDIO_KEY=

# Hugging Face (Optional)
HUGGINGFACE_TOKEN=

# ===========================================
# AI Models - Video Generation
# ===========================================
# Luma AI
# สมัครที่ https://lumalabs.ai/
LUMA_API_KEY=

# Kling AI (Optional)
KLING_API_KEY=

# Minimax (Optional)
MINIMAX_API_KEY=

# Runway ML (Optional)
RUNWAY_API_KEY=

# ===========================================
# Text-to-Speech (TTS)
# ===========================================
# iApp TTS (Thai TTS)
# สมัครที่ https://iapp.co.th/
IAPP_TTS_API_KEY=

# Azure TTS (Optional)
AZURE_TTS_KEY=
AZURE_TTS_REGION=

# ElevenLabs (Optional)
ELEVENLABS_API_KEY=

# ===========================================
# Cron Jobs
# ===========================================
# Secret สำหรับ verify cron requests (สร้างเอง)
CRON_SECRET=

# ===========================================
# Email Service (เลือกอย่างใดอย่างหนึ่ง)
# ===========================================
# Resend (ฟรี 100 emails/day)
# สมัครที่ https://resend.com
RESEND_API_KEY=

# SendGrid (Optional)
SENDGRID_API_KEY=

# Email sender address
EMAIL_FROM=AI Video Poster <noreply@yourdomain.com>

# ===========================================
# Security - Token Encryption
# ===========================================
# สร้าง key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ต้องเป็น 64 hex characters (32 bytes)
TOKEN_ENCRYPTION_KEY=

# ===========================================
# Optional: Analytics & Monitoring
# ===========================================
# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry Error Tracking
SENTRY_DSN=
